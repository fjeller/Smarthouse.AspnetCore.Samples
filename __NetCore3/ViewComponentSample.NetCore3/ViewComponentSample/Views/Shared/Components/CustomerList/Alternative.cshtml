@using ViewComponentSample.DataContext
@model List<ViewComponentSample.DataContext.PersonEntity>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Street</th>
			<th scope="col">Zip</th>
			<th scope="col">City</th>
		</tr>
	</thead>
	<tbody>
		@foreach ( PersonEntity person in Model )
		{
			<tr>
				<th scope="row">@person.Id</th>
				<td>@person.FirstName <b>@person.LastName</b></td>
				<td>@person.Street</td>
				<td>@person.ZipCode</td>
				<td>@person.City</td>
			</tr>
		}
	</tbody>
</table>