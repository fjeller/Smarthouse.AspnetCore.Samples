@model FullNameModel
@{
    ViewData["Title"] = "EnterNameNormal";
}

<h1>Normal entering of names</h1>


<form asp-action="SaveNameNormal" asp-controller="Home">
	
	<div asp-validation-summary="All"></div>

	<div class="form-group row">
		<label asp-for="@Model.FirstName" class="col-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="@Model.FirstName" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="@Model.LastName" class="col-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="@Model.LastName" class="form-control" />
		</div>
	</div>
	<div class="row justify-content-end">
		<button type="submit">Submit</button>
	</div>

</form>

@if ( Model?.DisplayName != null )
{
	<br/>
	<br/>
	<h2>Last entered name</h2>
	<span>@Model.DisplayName.FirstName</span> <span>@Model.DisplayName.LastName</span>
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
