@model NormalFormModel
@{
    ViewData["Title"] = "NormalForm";
}

<h1>NormalForm</h1>

<form asp-action="SaveNames" asp-controller="Users">
    
    <div asp-validation-summary="All"></div>

    <div class="form-group row">
        
        <label asp-for="@Model.FirstName" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="@Model.FirstName" class="form-control" />
        </div>

    </div>
    <div class="form-group row">
        
        <label asp-for="@Model.LastName" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="@Model.LastName" class="form-control" />
        </div>

    </div>
    
    <div class="form-group row justify-content-end">
        <button type="submit">Send</button>
    </div>

</form>

@if ( Model?.NamesToDisplay != null )
{
    <h2>Last entered Name</h2>
    @Model.NamesToDisplay.FirstName @Model.NamesToDisplay.LastName
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

