@page

@model BerlinPagesSample.Pages.NameDisplayModel
@{
    ViewData["Title"] = "NameDisplay";
}

<h1>Displaying Names</h1>

<form method="post">

    <div asp-validation-summary="All"></div>

    <div class="form-group row">

        <label asp-for="FirstName" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="FirstName" class="form-control" />
        </div>

    </div>
    <div class="form-group row">

        <label asp-for="LastName" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="LastName" class="form-control" />
        </div>

    </div>

    <div class="form-group row justify-content-end">
        <button type="submit">Send</button>
    </div>

</form>

@if (Model.EnteredNames != null)
{
    <h2>Last entered Name</h2>
    @Model.EnteredNames.FirstName @Model.EnteredNames.LastName
}




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

