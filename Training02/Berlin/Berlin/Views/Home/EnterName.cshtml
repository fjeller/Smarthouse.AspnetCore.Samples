@model EnterNameModel
@{
    ViewData["Title"] = "EnterName";
}

<h1>Enter a Name</h1>

<form asp-action="SaveNames" asp-controller="Home" data-ajax="true" data-ajax-mode="replace" 
      data-ajax-update="#resultDiv" method="post">
    
    <div class="form-group row">
        <label asp-for="@Model.FirstName" class="col-form-label col-2">
        </label>
        <div class="col-10">
            <input asp-for="@Model.FirstName" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.LastName" class="col-form-label col-2">
        </label>
        <div class="col-10">
            <input asp-for="@Model.LastName" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-end">
        <button type="submit">Save</button>
    </div>

</form>

<div id="resultDiv">
    

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}